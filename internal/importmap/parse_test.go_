package importmap

import (
	"encoding/json"
	"joelmoss/proscenium/internal/types"
	"os"
	"path"
	"testing"

	"github.com/stretchr/testify/assert"
)

func TestParse(t *testing.T) {
	t.Run("invalid json", func(t *testing.T) {
		contents := `{[}]}`
		_, err := Parse([]byte(contents), JsonType, types.TestEnv)

		var syntaxError *json.SyntaxError
		assert.ErrorAs(t, err, &syntaxError)
	})

	t.Run("invalid imports", func(t *testing.T) {
		contents := `{"imports": "as"}`
		_, err := Parse([]byte(contents), JsonType, types.TestEnv)

		var jsonErr *json.UnmarshalTypeError
		assert.ErrorAs(t, err, &jsonErr)
	})

	t.Run("javascript", func(t *testing.T) {
		assert := assert.New(t)

		result, _ := Parse([]byte(`env => ({
			"imports": {
				"foo": env === 'test' ? "/lib/foo_test.js" : "/lib/foo.js"
			}
		})`), JavascriptType, types.TestEnv)

		assert.Equal(map[string]string{"foo": "/lib/foo_test.js"}, result.Imports)
	})

	t.Run("imports", func(t *testing.T) {
		assert := assert.New(t)

		contents := `{
			"imports": {
				"foo": "/lib/foo.js"
			}
		}`
		result, _ := Parse([]byte(contents), JsonType, types.TestEnv)

		assert.Equal(map[string]string{"foo": "/lib/foo.js"}, result.Imports)
	})

	t.Run("scopes", func(t *testing.T) {
		contents := `{
			"imports": {},
			"scopes": {
				"/lib/import_map/": {
					"foo": "/lib/foo4.js"
				}
			}
		}`
		result, _ := Parse([]byte(contents), JsonType, types.TestEnv)

		assert.Equal(t, map[string]types.ImportMapScopes(map[string]types.ImportMapScopes{"/lib/import_map/": {"foo": "/lib/foo4.js"}}), result.Scopes)
	})
}

func TestParseFile(t *testing.T) {
	var cwd, _ = os.Getwd()
	var root string = path.Join(cwd, "../../", "test", "internal")

	assert := assert.New(t)

	file := path.Join(root, "config/import_maps/no_imports.json")
	result, _ := ParseFile(file, types.TestEnv)

	assert.Empty(result.Imports)
	assert.Empty(result.Scopes)
}
